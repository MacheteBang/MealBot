@inherits LayoutComponentBase
@inject UserAuthenticationStateProvider AuthState
@inject IJSRuntime JSRuntime

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            <AuthorizeView>
                <NotAuthorized>
                    <GoogleLoginButton />
                </NotAuthorized>
                <Authorized>
                    <ProfileButton />
                </Authorized>
            </AuthorizeView>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>
